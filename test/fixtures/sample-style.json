{
    "earth": {
        "filter": "is('layer', 'earth')",
        "order": 1,
        "style": {
            "color": [255, 255, 255]
        },
        "fill": {
            "order": 1,
            "style": {
                "color": [1, 1, 0]
            }
        }
    },

    "roads": {
        "filter": "is('layer', 'roads')",
        "order": 5,
        "style": {
            "type": "polygon",
            "color": [1, 1, 1],
            "width": 5
        },
        "highway": {
            "filter": "is('kind', 'highway')",
            "order": 1,
            "fill": {
                "style": {
                    "color": [1, 1, 0],
                    "width": 10
                },
                "offramp": {
                    "filter": "is('offramp', true)",
                    "style": {
                        "color": [1, 0.5, 0]
                    }
                }
            },
            "bridge": {
                "filter": "is('bridge', true)",
                "style": {
                    "color": [0.5, 0.5, 0.5],
                    "width": 10
                },

                "brooklyn": {
                    "filter": "is('name', 'Brooklyn')",
                    "style": {
                        "color": [0, 0, 0],
                        "width": 20
                    }
                }
            },
            "outline": {
                "order": -1,
                "style": {
                    "type": "line",
                    "color": [1, 1, 0],
                    "width": 12
                }
            }
        },
        "bikepath": {
            "filter": "is('kind', 'cyclepath')",
            "style": {
                "order": 2,
                "color": [0, 1, 1]
            },
            "another-style": {
                "style": {
                    "color": [0.5, 1, 1]
                }
            }
        }
    },

    "roads2": {
        "filter": "is('layer', 'roads')",
        "order": 1,
        "style": {
            "color": [1, 0, 1]
        },
        "more-stuff": {
            "order": 3.14,
            "style": {
                "color": [1, 0.5, 1]
            }
        }
    }

}


